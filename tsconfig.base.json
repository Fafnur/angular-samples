{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@angular-samples/core/icons": ["libs/core/icons/src/index.ts"],
      "@angular-samples/icons/page": ["libs/icons/page/src/index.ts"],
      "@angular-samples/icons/ui/svg-paths": ["libs/icons/ui/svg-paths/src/index.ts"],
      "@angular-samples/icons/ui/svg-sources": ["libs/icons/ui/svg-sources/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
